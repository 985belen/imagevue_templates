<?xml version="1.0" encoding="UTF-8"?>
<config>
	<imagevue>
		<style>
			<stylesheet>imagevue.css</stylesheet>
			<background_color>000000</background_color>
			<foreground_color>FFFFFF</foreground_color>
			<custom_color>AAAAAA</custom_color>
			<background_image>
				<url>tactile.png</url>
				<repeat>repeat</repeat>
			</background_image>
			<background_image_2>
				<enabled>true</enabled>
				<url>radial.swf</url>
				<align>B</align>
				<repeat>no-repeat</repeat>
				<scalemode>exactFit</scalemode>
			</background_image_2>
			<background_image_3>
				<url>blackpaper.png</url>
			</background_image_3>
		</style>
		<controls>
			<maincontrols>
				<button>
					<background_color>background_color</background_color>
					<foreground_color>custom_color</foreground_color>
					<opacity>80</opacity>
					<opacity_press>90</opacity_press>
				</button>
			</maincontrols>
			<largecontrols>
				<color>background_color</color>
				<size>50</size>
			</largecontrols>
		</controls>
		<audioplayer>
			<color>custom_color</color>
		</audioplayer>
		<image>
			<imagebuttons>
				<color>background_color</color>
				<iconcolor>custom_color</iconcolor>
				<width>50</width>
				<shadow>false</shadow>
			</imagebuttons>
			<closebutton>
				<iconcolor>custom_color</iconcolor>
			</closebutton>
			<frame>
				<width>5</width>
				<color>background_color</color>
			</frame>
			<text>
				<text2>
					<offset_x>11</offset_x>
					<offset_y>91</offset_y>
					<background_color>background_color</background_color>
				</text2>
			</text>
		</image>
		<thumbnails>
			<thumbnails>
				<frame>
					<width>0</width>
					<space>10</space>
					<color>background_color</color>
				</frame>
				<thumbnail>
					<active_scale>120</active_scale>
					<shadow>true</shadow>
				</thumbnail>
			</thumbnails>
			<thumbnailscroller>
				<space>1</space>
				<frame_width>0</frame_width>
				<frame_color>background_color</frame_color>
				<frame_color_active>foreground_color</frame_color_active>
				<back_color>background_color</back_color>
			</thumbnailscroller>
			<tooltip>
				<color>background_color</color>
			</tooltip>
		</thumbnails>
		<textpage>
			<background>
				<color>background_color</color>
				<scrollbar_color>background_color</scrollbar_color>
				<scrollbar_arrow_color>custom_color</scrollbar_arrow_color>
			</background>
		</textpage>
		<menu>
			<mainmenu>
				<indent>25</indent>
				<horizontal_margin>10</horizontal_margin>
				<menubutton_height>70</menubutton_height>
				<menuitem>
					<color>242424</color>
					<opacity>0</opacity>
					<opacity_rollover>100</opacity_rollover>
					<horizontal_textmargin>12</horizontal_textmargin>
					<vertical_textmargin>6</vertical_textmargin>
				</menuitem>
				<menuback>
					<opacity>0</opacity>
					<opacity_rollover>100</opacity_rollover>
					<color>1A1A1A</color>
					<shadow>true</shadow>
				</menuback>
				<menubutton_icon>
					<enabled>true</enabled>
					<color>custom_color</color>
				</menubutton_icon>
			</mainmenu>
		</menu>
		<modules>
			<hotspot>
				<color>background_color</color>
			</hotspot>
		</modules>
	</imagevue>
</config>
